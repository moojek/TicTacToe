<%- contentFor('body') %>
    <body style="text-align: center">
        <table class="game">
            <tr>
                <td id='0'></td>
                <td id='1'></td>
                <td id='2'></td>
            </tr>
            <tr>
                <td id='3'></td>
                <td id='4'></td>
